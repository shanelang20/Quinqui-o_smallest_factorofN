while True:
    n = int(input("Enter Integer:"))
    i = 1
    if n >= 2:
            while True:
                i = i + 1
                factor = n % i
                prime = n // i
                
                if (prime == 1):
                    print(f"{n} is a Prime number")
                    break
                elif (factor == 0):
                    print(f"The Smallest Factor of {n} other than 1 is: {i}")
                    break
    else:
        print("invalid Number. Enter a number greater than 1.")
